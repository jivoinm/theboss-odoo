<odoo>
  <data>
    
    <!-- VIEWS: "SAS Fleet"
    - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    
    <!-- Form view for "sas_fleet.settings" -->
    <record id="view_itrack_fleet_settings_form" model="ir.ui.view">
        <field name="name">view.itrack_fleet_settings.form</field>
        <field name="model">itrack_fleet.settings</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="iTrack Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    or
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <sheet>
                    <group string="Account Settings">
                        <field name="api_key" />
                        <field name="api_url" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     
    <record id="action_itrack_fleet_settings"
                model="ir.actions.act_window">
            <field name="name">iTrack Settings</field>
            <field name="res_model">itrack_fleet.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_itrack_fleet_settings"
                  name="iTrack Settings"
                  parent="base.menu_administration"
                  sequence="90"
                  action="action_itrack_fleet_settings" />
    
  </data>
</odoo>
  