<odoo>
  <data>
    <!-- List views -->
   <record id="agro_view_tree" model="ir.ui.view">
     <field name="name">agro.property.tree</field>
     <field name="model">agro.property</field>
     <field name="arch" type="xml">
       <tree string="Properties">
         <field name="name"/>
         <field name="description"/>
         <field name="property_type_id"/>
       </tree>
     </field>
   </record>
   <!-- GeoEngine views
   <record id="agro_geoview_property" model="ir.ui.view">
     <field name="name">agro.property.geo_view</field>
     <field name="arch" type="xml">
       <geoengine version="7.0">
         <field name="name"/>
         <field name="description"/>
         <field name="property_type_id"/>
       </geoengine>
     </field>
     <field eval="16" name="priority"/>
     <field name="model">agro.property</field>
   </record>

   <record id="geoengine_vector_layer_property" model="geoengine.vector.layer">
     <field name="name">Basic Property</field>
     <field name="geo_field_id" ref="agro.agro_geoview_property"/>
     <field name="geo_repr">basic</field>
     <field name="view_id" ref="agro_geoview_property"/>
     <field name="attribute_field_id" ref="field_property_name"/>
     <field name="begin_color">#FF680A</field>
   </record>
-->
   <record id="agro_campaign_view_tree" model="ir.ui.view">
     <field name="name">agro.campaign.tree</field>
     <field name="model">agro.campaign</field>
     <field name="arch" type="xml">
       <tree string="Campaigns">
         <field name="name"/>
         <field name="state"/>
         <field name="year"/>
         <field name="description"/>
       </tree>
     </field>
   </record>

   <record id="agro_culture_view_tree" model="ir.ui.view">
     <field name="name">agro.culture.tree</field>
     <field name="model">agro.culture</field>
     <field name="arch" type="xml">
       <tree string="Cultures">
         <field name="name"/>
         <field name="code"/>
         <field name="description"/>
       </tree>
     </field>
   </record>

   <!-- Form views -->
   <record id="agro_view_form" model="ir.ui.view">
     <field name="name">agro.property.form</field>
     <field name="model">agro.property</field>
     <field name="arch" type="xml">
       <form string="Property">
         <sheet>
           <group>
             <field name="name"/>
             <field name="description"/>
             <field name="property_type_id"/>
           </group>
           <notebook colspan="4">
             <!-- <page string="Property on map">
               <field name="the_geom" colspan="4" widget="geo_edit_map"/>
             </page> -->
             <page string="Documents">
             </page>
           </notebook>
         </sheet>
       </form>
     </field>
   </record>

   <record id="agro_campaign_view_form" model="ir.ui.view">
     <field name="name">agro.campaign.form</field>
     <field name="model">agro.campaign</field>
     <field name="arch" type="xml">
       <form string="Campaign">
         <header>
           <button name="approve_button" state="approved" type="object" class="oe_stat_button" icon="fa-check"
             attrs="{'invisible': [('state','!=','draft')]}"></button>

     	    <!--This will create the statusbar, thanks to the widget. -->
     	    <field name="state" widget="statusbar"/>
        </header>
         <sheet>
            <div class="oe_button_box" name="button_box">

                <button name="tasks_button" type="object" class="oe_stat_button" icon="fa-tasks">
                    <field name="tasks" widget="button"/>Tasks
                </button>
            </div>
            <div class="oe_title">
                <h1>
                    <field name="name" default_focus="1" placeholder="Name"/>
                </h1>
            </div>
             <group colspan="2" col="2">
               <separator string="Cultivation details" colspan="2"/>
               <field name="description"/>
               <field name="culture_id"/>
             </group>
             <group colspan="2" col="2">
              <separator string="Planning" colspan="2"/>
              <field name="year"/>
              <field name="duration"/>
            </group>
             <notebook colspan="4">
               <page string="Cultivate on properties">
                 <field name="property_ids" nolabel="1"/>
                </page>
             </notebook>
         </sheet>
         <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
       </form>
     </field>
   </record>

   <record id="agro_culture_view_form" model="ir.ui.view">
     <field name="name">agro.culture.form</field>
     <field name="model">agro.culture</field>
     <field name="arch" type="xml">
       <form string="Property">
         <sheet>
           <group>
             <field name="name"/>
             <field name="code"/>
             <field name="description"/>
           </group>
           <notebook colspan="4">
             <page string="Recepies - to do">
               <field name="recepie_ids" nolabel="1"/>
              </page>
           </notebook>
         </sheet>
       </form>
     </field>
   </record>

  <record id="agro_culture_recepie_view_form" model="ir.ui.view">
    <field name="name">agro.culture.recepie.form</field>
    <field name="model">agro.culture.recepie</field>
    <field name="arch" type="xml">
      <form string="Culture Recepie">
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="create_po"/>
            <field name="create_wo"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

    <!-- explicit list view definition -->
    <record id="action_agrofield_list" model="ir.actions.act_window">
			<field name="name">Agro Property Information</field>
			<field name="res_model">agro.property</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,kanban</field>
		</record>

    <record id="action_campaign_list" model="ir.actions.act_window">
			<field name="name">Agro Campaign</field>
			<field name="res_model">agro.campaign</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,kanban</field>
		</record>

    <record id="action_culture_list" model="ir.actions.act_window">
			<field name="name">Agro Culture</field>
			<field name="res_model">agro.culture</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,kanban</field>
		</record>

    <!-- Top bar menu -->
		<menuitem id="menu_agro_main" name="Agro"/>
		<!-- Left Sidebar MenuHead -->
		<menuitem id="menu_field_main" name="Field" parent="menu_agro_main"/>
		<!-- Left Sidebar Menu -->
		<menuitem id="menu_field_info" parent="menu_field_main" action="action_agrofield_list"/>
		<menuitem id="menu_field_campaign" parent="menu_field_main" action="action_campaign_list"/>
		<menuitem id="menu_field_culture" parent="menu_field_main" action="action_culture_list"/>
  </data>
</odoo>
