<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        
        <record id="module_category_appraisal" model="ir.module.category">
            <field name="name">Appraisal</field>
            <field name="sequence" eval="10" />
            <field name="visible" eval="True" />
            <field name="description">Appraisal category</field>
        </record>
        
        <record id="group_appraisal_manager" model="res.groups">
            <field name="name">Appraisal Manager</field>
        </record>
        
        <record model="res.groups" id="group_hr_appraisal_user">
            <field name="name">Appraisal Settings</field>
            <field name="implied_ids" eval="[(4, ref('group_appraisal_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>        
                    
        <record id="access_theboss_hr_appraisal_user" model="ir.model.access">
            <field name="name">theboss_hr_appraisal.user</field>
            <field name="model_id" ref="theboss_hr_appraisals.model_hr_appraisal"/>
            <field name="group_id" ref="theboss_hr_appraisals.group_appraisal_manager"/>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="active" eval="True" />
        </record>
        
    </data>
</odoo>
