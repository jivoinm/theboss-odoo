<?xml version="1.0"?>
<odoo>
    <data>
       
       <!-- VIEWS: "Appraisal"
       
           - Model·········: hr.appraisal
           - _rec_name·····: appraisal
           - Domain········: []
           - Context·······: {}
           - Parent menu ··: base.menu_custom
           - View priority·: 16    
           - Sequence····..: 10
           - Action help···: Something about hr_appraisal
       - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
       
       <!-- Tree view for "hr_appraisal" -->
       <record id="view_hr_appraisal_tree" model="ir.ui.view">
           <field name="name">view.hr.appraisal.tree</field>
           <field name="model">hr.appraisal</field>
           <field name="type">tree</field>
           <field name="mode">primary</field>
           <field name="active" eval="True" />
           <field name="arch" type="xml">
               <tree string="hr_appraisal_tree" create="1" delete="1" edit="1">
                   <field name="name" />
       
               </tree>
           </field>
       </record>
      
       <record id="view_hr_appraisal_kanban" model="ir.ui.view">
        <field name="name">view.hr.appraisal.kanban</field>
        <field name="model">hr.appraisal</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
               <kanban default_group_by="state" quick_create="false">
                <field name="color"/>
                <field name="state"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                                    <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div><strong><field name="employee_id"/></strong></div>
                                <div groups="hr.group_multi_departments">
                                    <field name="department_id"/>
                                </div>
                                <t t-if="record.date_close.raw_value and record.date_close.raw_value &lt; (new Date())" t-set="red">oe_kanban_text_red</t>
                                    Deadline: <span t-attf-class="#{red}"><i><field name="date_close"/></i></span>
                                <br/>
                                <div>
                                    <t t-if="! record.date_final_interview.raw_value and record.state.raw_value != 'new' and record.state.raw_value != 'cancel'">
                                    <strong><a name="action_create_calendar_event" type="object">Schedule The Final Interview</a></strong></t>
                                    <t t-if="record.date_final_interview.raw_value and record.state.raw_value != 'new' and record.date_final_interview.raw_value &lt; (new Date())" t-set="deadline">oe_kanban_text_red</t>
                                    <t t-if="record.date_final_interview.raw_value and record.state.raw_value != 'new'"><strong><span>Final Interview: </span></strong>
                                    <span t-attf-class="#{deadline}"><i><field name="date_final_interview"/></i></span></t>
                                </div>
                                <div>
                                    <a name="action_get_users_input" type="object">(<field name="count_sent_survey"/>) Sent Appraisal</a>
                                    <a name="action_get_users_input" type="object" context="{'answers':True}"> (<field name="count_completed_survey"/>) Answers</a>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <div class="o_kanban_inline_block">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <img t-att-src="kanban_image('hr.employee', 'image_small', record.employee_id.raw_value)" t-att-title="record.employee_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
       
       <!-- Form view for "hr_appraisal" -->
       <record id="view_hr_appraisal_form" model="ir.ui.view">
           <field name="name">view.hr.appraisal.form</field>
           <field name="model">hr.appraisal</field>
           <field name="type">form</field>
           <field name="mode">primary</field>
           <field name="active" eval="True" />
           <field name="arch" type="xml">
               <form string="hr_appraisal_form" create="1" delete="1" edit="1">
                     <header>
                        <button name="button_send_appraisal" string="Start Appraisal and Send Forms" states="new" type="object" class="oe_highlight" groups="theboss_hr_appraisals.group_hr_appraisal_user"/>
                        <button name="button_done_appraisal" string="Done" states="pending" type="object" groups="theboss_hr_appraisals.group_hr_appraisal_user"/>
                        <button name="button_cancel_appraisal" string="Cancel" states="pending" type="object" groups="theboss_hr_appraisals.group_hr_appraisal_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,pending,done" options="{'fold_field': 'fold'}"/> 
                    </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_inline oe_stat_button" name="action_get_users_input" type="object" icon="fa-envelope-o" context="{'answers':True}">
                        <field name="count_completed_survey" string="Answers" widget="statinfo"/>
                    </button>
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" attrs="{'invisible':[('state', 'not in', ('done','cancel'))]}">
                        <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                    </button>
                </div>
                <label for="employee_id" class="oe_edit_only"/>
                <h1>
                    <field name="employee_id" class="oe_inline" attrs="{'readonly':[('state', '!=', 'new')]}" placeholder="Employee's Name"/>
                </h1>
                <group>
                    <group>
                        <field name="department_id" groups="hr.group_multi_departments"/>
                        <field name="date_close" attrs="{'readonly':[('state','in', ('pending','done'))]}"/>
                    </group>
                    <group>
                        <field name="date_final_interview" attrs="{'readonly':[('state', 'in', ['done','cancel'])]}"/>
                        <field name="mail_template_id" attrs="{'readonly':[('state', '!=', 'new')]}"/>
                        <field name="meeting_id" invisible="True"/>
                        <field name="company_id" invisible="True"/>
                    </group>
                </group>
                <notebook>
                    <page string="Final Evaluation" attrs="{'invisible':[('state','=','new')]}">
                        <field name="action_plan"/>
                    </page>
                    <page string="Plan">
                        <group col="4">
                            <field name="manager_appraisal" attrs="{'readonly':[('state', '!=', 'new')]}"/>
                            <field name="manager_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" options="{'color_field': 'color'}" attrs="{'invisible':[('manager_appraisal','=',False)], 'readonly':[('state', '!=', 'new')]}" readonly="0"/>
                            <field name="manager_survey_id" nolabel="1" placeholder="Appraisal Form..." attrs="{'invisible':[('manager_appraisal','=',False)], 'readonly':[('state', '!=', 'new')]}"/>
                        </group>
                    </page>
                </notebook>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="activity_ids" widget="mail_activity"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
          </form>
        </field>
       </record>
       
       <!-- Search view for "hr_appraisal" -->
       <record id="view_hr_appraisal_search" model="ir.ui.view">
           <field name="name">view.hr.appraisal.search</field>
           <field name="model">hr.appraisal</field>
           <field name="type">search</field>
           <field name="mode">primary</field>
           <field name="active" eval="True" />
           <field name="arch" type="xml">
               <search string="hr_appraisal_search">
                   <field name="name" />
               </search>
           </field>
       </record>
       
       <!-- Main window action for "hr_appraisal" -->
       <record id="action_hr_appraisal_act_window" model="ir.actions.act_window">
           <field name="type">ir.actions.act_window</field>
           <field name="name">Appraisal</field>
           <field name="res_model">hr.appraisal</field>
           <field name="view_mode">kanban,tree,form</field>
           <field name="view_type">form</field>
           <!-- <field name="target">current</field>
           <field name="domain">[]</field>
           <field name="context">{}</field> -->
           <field name="search_view_id" ref="view_hr_appraisal_search" />
           <field name="help" type="html">
               <p class="oe_view_nocontent_create">
                   Click to add new appraisal
               </p><p>
                   something else
               </p>
           </field>
       </record>

       <record model="ir.actions.act_window" id="action_hr_appraisal_responses_act_window">
            <field name="name">Answers</field>
            <field name="res_model">survey.user_input</field>
            <field name="context">{'search_default_group_by_survey': True}</field>
            <field name="inherit_id" ref="survey.action_survey_user_input"/>
            <field name="help" type="html">
                <p>Nobody has replied to your surveys yet.</p>
            </field>
        </record>
       
       <!-- Main menu for "hr_appraisal" -->
       <record id="menu_hr_appraisal" model="ir.ui.menu" >
           <field name="name">Appraisals</field>
           <field name="sequence" eval="21" />
           <field name="action" ref="action_hr_appraisal_act_window" />
           <field name="parent_id" ref="hr.menu_hr_root" />
       </record>
    </data> 
</odoo>