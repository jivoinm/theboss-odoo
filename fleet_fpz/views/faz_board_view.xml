<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="faz_consum_cisterne_action" model="ir.actions.act_window">
      <field name="name">Raport alimentari</field>
      <field name="res_model">fleet_fpz.report.consum</field>
      <field name="view_type">form</field>
      <field name="view_mode">pivot</field>
      <field name="view_id"></field>  <!-- force empty -->
      <field name="state">code</field>
      <field name="code">action = self.custom_funct_date(cr, uid, context=context)</field>
      <field eval="True" name="condition"/>
      <field name="help" type="html">
        <p>
          Odoo helps you managing the costs for your different vehicles
          Costs are generally created from services and contract and appears here.
        </p>
        <p>
          Thanks to the different filters, Odoo can only print the effective
          costs, sort them by type and by vehicle.
        </p>
      </field>
    </record>
    <record id="fleet_reporting_pivot_action" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="fleet_fpz_report_consum_pivot"/>
        <field name="act_window_id" ref="faz_consum_cisterne_action"/>
    </record>

    <menuitem id="menu_fleet_reporting_faz_cisterne"
              name="Raport Alimentari"
              parent="fleet.menu_fleet_reporting"
              action="faz_consum_cisterne_action"
              sequence="1"
              groups="fleet.fleet_group_manager"/>
</odoo>