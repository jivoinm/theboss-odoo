{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop odoo",
            "type": "shell",
            "command": "docker stop odoo",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "start odoo",
            "type": "shell",
            "command": "docker start -a odoo",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild odoo",
            "type": "shell",
            "command": ".~/rebuild-odoo-10.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}