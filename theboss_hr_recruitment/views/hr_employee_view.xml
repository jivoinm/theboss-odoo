<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_employee_form_romania" model="ir.ui.view">
            <field name="name">view.employee.form.romania</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='toggle_active']" position="before">
                    <button name="action_generate_documents"
                        class="oe_stat_button"
                        icon="fa-gears"
                        type="object"
                        help="Generate template documents"
                    >
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">HR doc</span>
                        </div>
                    </button>
                    <button name="action_get_attachment_tree_view"
                        class="oe_stat_button"
                        icon="fa-book"
                        type="object">
                        <field name="attachment_number" widget="statinfo" string="Documents"/>
                    </button>
                </xpath>
            	<xpath expr="//group[@name='active_group']" position="after">
					<group colspan="4" string="Social Security">
						<field name="casang"/>
						<field name="person_in_care"/>
						<field name="person_related" context="{'employee_id': active_id}">
						    <tree string="Persons Related" editable="bottom">
						        <field name="name"/>
						        <field name="ssnid"/>
						        <field name="relation"/>
								<field name="relation_type"/>
						    </tree>
						</field>
					</group>
				</xpath>
                <field name="identification_id" position="before">
                    <field name="ssnid" groups="base.group_hr_user"/>
                    <field name="ssnid_init"/>
                    <field name="first_name_init"/>
                    <field name="last_name_init"/>
                    <field name="emit_by"/>
                    <field name="emit_on"/>
					<field name="expires_on"/>
                </field>               
            </field>
        </record>
        
        
        <record id="view_hr_person_related_tree" model="ir.ui.view">
            <field name="name">view.hr.person.related.tree</field>
            <field name="model">hr.employee.related</field>
            <field name="arch" type="xml">
                <tree string="Employees Persons related">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="ssnid"/>
                    <field name="relation"/>
					<field name="relation_type"/>
                </tree>
            </field>
        </record>
        
        <record id="view_hr_person_related_form" model="ir.ui.view">
            <field name="name">view.hr.person.related.form</field>
            <field name="model">hr.employee.related</field>
            <field name="arch" type="xml">
                <form string="Employees Persons related">
                     <sheet>
                        <group>                        
                            <field name="employee_id"/>
                            <field name="name"/>
                            <field name="ssnid"/>
                            <field name="relation"/>
                            <field name="relation_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
       <record id="view_hr_person_related_search" model="ir.ui.view">
            <field name="name">view.hr.person.related.search</field>
            <field name="model">hr.employee.related</field>
            <field name="arch" type="xml">
                <search string="Persons related">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <newline/>
                    <group expand="1" string="Group By...">
                        <filter string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>
						<filter string="Type" icon="terp-personal" domain="[]" context="{'group_by':'relation_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Resume and Letters -->
        <record id="ir_attachment_view_search_inherit_hr_employee" model="ir.ui.view">
            <field name="name">ir.attachment.search.inherit.employee</field>
            <field name="model">ir.attachment</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="base.view_attachment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_date']" position="after">
                    <field name="index_content" string="Content"/>
                </xpath>
                <xpath expr="//filter[@name='my_documents_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//filter[@name='url_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//filter[@name='binary_filter']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
            </field>
        </record>

         
         <record id="action_hr_person_related_form" model="ir.actions.act_window">
            <field name="name">Person related</field>
            <field name="res_model">hr.employee.related</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Detailed contacts address</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
               <xpath expr="/form/sheet//div/field[@name='street']"
                       position="after">
                    <div>
                        <field name="add_street" style="width: 80%%"
                               placeholder="Street..."
                               attrs="{'invisible': [('is_company','=',True)]}"
                               />
                        <field name="add_number" style="width: 19%%"
                               placeholder="Number..."
                               attrs="{'invisible': [('is_company','=',True)]}"
                               />
                        <newline/>
                        <field name="add_block" style="width: 34%%"
                               placeholder="Block..."
                               attrs="{'invisible': [('is_company','=',True)]}"
                               />
                        <field name="add_staircase" style="width: 33%%"
                              placeholder="Staircase..."
                               attrs="{'invisible': [('is_company','=',True)]}"
                              />
                        <field name="add_flat" style="width: 33%%"
                              placeholder="Flat..."
                               attrs="{'invisible': [('is_company','=',True)]}"
                              />
                    </div>
                </xpath>
               <xpath expr="/form/sheet//div/field[@name='street']"
                       position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('is_company','!=',True)]}</attribute>
                </xpath>
            </field>
        </record>
                
        <record id="base.action_partner_form" model="ir.actions.act_window">
			<field name="context">
				{'readonly_by_pass': ['street',]}
			</field>
        </record>

    </data> 
</odoo>